<?xml version="1.0" encoding="UTF-8"?>
<widget id="io.cocoon.sample.multiplayer" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cocoon="http://cocoon.io/ns/1.0">
    <name>Cocoon Multiplayer demo</name>
    <description>
    This demo shows the multiplayer support in Cocoon. Currently the multiplayer plugin supports Game Center in iOS, Google Play Games on Android and a the Loopback mode on all platforms.
    </description>

    <!-- Shown in the wizard -->
    <icon src="icon.png" />

    <content src="index.html" />
    <access origin="*"/>

    <cocoon:plugin name="cocoon-plugin-multiplayer-ios-gamecenter"/>
    <cocoon:plugin name="cocoon-plugin-multiplayer-android-googleplaygames">
        <param name="APP_ID" value=""/>
    </cocoon:plugin>
    
    <preference name="Orientation" value="landscape"/>
    <preference name="Fullscreen" value="true"/>
</widget>
